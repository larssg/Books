- title @book.name
#book
  %h2= @book.name
  .authors
    by
    %span= @book.author_names
  
  .isbn-10
    %label ISBN-10:
    = @book.isbn_10

  .isbn-13
    %label ISBN-13:
    = @book.isbn_13
  
  - unless @book.published.blank?
    .published
      %label Published:
      = @book.published
  
  - unless @book.pages.blank?
    .pages
      %label Pages:
      = @book.pages
      
  .added
    %label Added:
    = @book.created_at.to_date
    
- if @book.large_image_url
  - content_for :sidebar do
    .cover= link_to image_tag(@book.medium_image_url), @book.amazon_detail_page_url, :target => '_blank'