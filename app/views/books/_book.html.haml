.book
  %h2= link_to book.name, book
  
  - if book.authors.size > 0
    %span.authors
      by
      %span= book.author_names
      
  - unless book.published.blank?
    %span.published
      Published:
      %span= book.published
      
  - unless book.pages.blank?
    %span.pages
      Pages:
      %span= book.pages
      
  - unless book.amazon_detail_page_url.blank?
    %span.amazon
      = link_to 'Amazon', book.amazon_detail_page_url