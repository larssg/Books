.book
  - unless book.small_image_id.blank?
    .image= link_to book.small_image.image_tag, book

  %h3= link_to book.name, book
  
  - if book.authors.size > 0
    %span.authors
      by
      %span= book.author_names
      
  - unless book.published.blank?
    %span.published
      %label Published:
      = book.published
      
  - unless book.pages.blank?
    %span.pages
      %label Pages:
      = book.pages

  .clear
    %hr