- title 'Log in'

- form_tag session_path do |f|
  .field
    = label_tag 'login'
    = text_field_tag :login, @login
    
  .field
    = label_tag 'password'
    = password_field_tag :password, nil
    
  .field
    = label_tag 'remember_me'
    = check_box_tag :remember_me, 1, @remember_me
    
  = submit_tag 'Log in'